{
	"id": "com.xiaomi-mi",
	"sdk": 2,
	"name": {
		"en": "Xiaomi-mi zigbee"
	},
	"description": {
		"en": "Xiaomi-mi zigbee",
		"nl": "Xiaomi-mi zigbee"
	},
	"category": [
    "lights"
  ],
	"version": "0.0.1",
	"compatibility": ">=1.4.0",
	"author": {
		"name": "Ted Tolboom",
		"email": "dTNL.Homey@gmail.com"
	},
	"images": {
		"large": "/assets/images/large.png",
		"small": "/assets/images/small.png"
	},
	"flow": {
		"actions": [
			{
				"id": "XIAOMI_config",
				"title": {
					"en": "Retrieve information"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=temperature_humidity_sensor"
          }
        ]
      }
    ]
	},
	"drivers": [
		{
			"id": "door_window_sensor",
			"name": {
				"en": "Door/Window sensor",
				"nl": "Door/Window sensor"
			},
			"class": "sensor",
			"capabilities": [
        "alarm_contact",
    		"measure_battery",
    		"alarm_battery"
      ],
			"zigbee": {
				"manufacturerName": "LUMI",
				"productId": [
					"lumi.sensor_magnet"
				],
				"deviceId": 260,
				"profileId": 260,
				"learnmode": {
					"image": "/drivers/door_window_sensor/assets/learn_door.svg",
					"instruction": {
						"en": "Long press the reset button to open more than 3 seconds until the blue light flashes three times after release"
					}
				}
			},
			"images": {
				"large": "/drivers/door_window_sensor/assets/images/large.png",
				"small": "/drivers/door_window_sensor/assets/images/small.png"
			},
			"settings": [
      ]
    },
		{
			"id": "motion_sensor",
			"name": {
				"en": "Motion sensor",
				"nl": "Motion sensor"
			},
			"class": "sensor",
			"capabilities": [
        "alarm_motion",
    		"alarm_battery",
    		"measure_battery"
      ],
			"zigbee": {
				"manufacturerName": "LUMI",
				"productId": "lumi.sensor_motion",
				"deviceId": 260,
				"profileId": 260,
				"learnmode": {
					"image": "/drivers/motion_sensor/assets/learn_motion.svg",
					"instruction": {
						"en": "Long press the reset button to open more than 3 seconds until the blue light flashes three times after release",
						"nl": "Long press the reset button to open more than 3 seconds until the blue light flashes three times after release"
					}
				}
			},
			"images": {
				"large": "/drivers/motion_sensor/assets/images/large.png",
				"small": "/drivers/motion_sensor/assets/images/small.png"
			},
			"settings": [
      ]
    },
		{
			"id": "temperature_humidity_sensor",
			"name": {
				"en": "Temperature Humidity sensor",
				"nl": "Temperature Humidity sensor"
			},
			"class": "sensor",
			"capabilities": [
        "measure_temperature",
        "measure_humidity",
        "measure_battery",
        "alarm_battery"
      ],
			"zigbee": {
				"manufacturerName": "LUMI",
				"productId": ["lumi.sens"],
				"deviceId": [24321],
				"profileId": 260,
				"learnmode": {
					"image": "/drivers/temperature_humidity_sensor/assets/learn_temp.svg",
					"instruction": {
						"en": "Long press the button on top of the sensor to open more than 5 seconds until the blue light flashes three times after release",
						"nl": "Long press the button on top of the sensor to open more than 5 seconds until the blue light flashes three times after release"
					}
				}
			},
			"images": {
				"large": "/drivers/temperature_humidity_sensor/assets/images/large.png",
				"small": "/drivers/temperature_humidity_sensor/assets/images/small.png"
			},
			"settings": [
      ]
    },
		{
			"id": "temperature_humidity_pressure_sensor",
			"name": {
				"en": "Smart Home Weather sensor",
				"nl": "Smart Home Weather sensor"
			},
			"class": "sensor",
			"capabilities": [
				"measure_temperature",
				"measure_pressure",
				"measure_humidity"
 			],
			"zigbee": {
				"manufacturerName": "LUMI",
				"productId": ["lumi.weather"],
				"deviceId": [770, 24321],
				"profileId": 260,
				"learnmode": {
					"image": "/drivers/temperature_humidity_pressure_sensor/assets/learn_temp.svg",
					"instruction": {
						"en": "Long press the button on top of the sensor to open more than 5 seconds until the blue light flashes three times after release",
						"nl": "Long press the button on top of the sensor to open more than 5 seconds until the blue light flashes three times after release"
					}
				}
			},
			"images": {
				"large": "/drivers/temperature_humidity_pressure_sensor/assets/images/large.png",
				"small": "/drivers/temperature_humidity_pressure_sensor/assets/images/small.png"
			},
			"settings": [
		]
	},
		{
			"id": "wireless_switch",
			"name": {
				"en": "Wireless switch",
				"nl": "Wireless switch"
			},
			"class": "button",
			"capabilities": [
        "onoff"
      ],
			"zigbee": {
				"manufacturerName": "LUMI",
				"productId": ["lumi.sensor_switch"],
				"deviceId": 260,
				"profileId": 260,
				"learnmode": {
					"image": "/drivers/wireless_switch/assets/learn_button.svg",
					"instruction": {
						"en": "Long press the reset button to open more than 3 seconds until the blue light flashes three times after release",
						"nl": "Long press the reset button to open more than 3 seconds until the blue light flashes three times after release"
					}
				}
			},
			"images": {
				"large": "/drivers/wireless_switch/assets/images/large.png",
				"small": "/drivers/wireless_switch/assets/images/small.png"
			},
			"settings": [
      ]
    }
  ]
}
